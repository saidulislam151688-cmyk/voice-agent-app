<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Dark Theme with Dynamic Colors -->
    <style name="Theme.VoiceAgent" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        
        <!-- Status Bar and Navigation -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Window Features -->
        <item name="android:windowBackground">@color/background_dark</item>
        
        <!-- Material Components -->
        <item name="floatingActionButtonStyle">@style/VoiceAgent.FloatingActionButton</item>
        <item name="materialCardViewStyle">@style/VoiceAgent.CardView</item>
    </style>
    
    <!-- Splash Theme -->
    <style name="Theme.VoiceAgent.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.VoiceAgent</item>
    </style>
    
    <!-- FAB Style -->
    <style name="VoiceAgent.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">12dp</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <!-- Card Style -->
    <style name="VoiceAgent.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/glass_white</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_border</item>
    </style>
    
    <!-- Text Styles -->
    <style name="VoiceAgent.Text.Title" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="VoiceAgent.Text.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="VoiceAgent.Text.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="VoiceAgent.Text.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
