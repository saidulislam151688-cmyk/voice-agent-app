<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark">

    <!-- Animated Background Waves -->
    <View
        android:id="@+id/wave1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/wave_circle"
        android:alpha="0.15"
        android:translationY="50dp"/>

    <View
        android:id="@+id/wave2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/wave_circle"
        android:alpha="0.2"
        android:translationY="-30dp"/>

    <View
        android:id="@+id/wave3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/wave_circle"
        android:alpha="0.25"/>

    <!-- Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="48dp">

        <!-- Logo with glow -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glow_circle"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic_white"/>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Agent"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:shadowColor="#4CAF50"
            android:shadowRadius="20"/>

        <!-- Status with animation -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to start"
            android:textSize="16sp"
            android:textColor="#A0A0A0"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

    <!-- Center Mic Button with Ripple -->
    <FrameLayout
        android:id="@+id/micContainer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true">

        <!-- Ripple rings -->
        <View
            android:id="@+id/ripple1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_ring"
            android:alpha="0"/>

        <View
            android:id="@+id/ripple2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_ring"
            android:alpha="0"/>

        <!-- Main circle -->
        <View
            android:id="@+id/circleView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@drawable/mic_button_bg"/>

        <!-- Mic Icon -->
        <ImageView
            android:id="@+id/tvIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic_white"/>

    </FrameLayout>

    <!-- Sound Wave Visualization -->
    <LinearLayout
        android:id="@+id/soundWaveContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/chatCard"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <View android:id="@+id/bar1" android:layout_width="6dp" android:layout_height="20dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar2" android:layout_width="6dp" android:layout_height="30dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar3" android:layout_width="6dp" android:layout_height="25dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar4" android:layout_width="6dp" android:layout_height="35dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar5" android:layout_width="6dp" android:layout_height="20dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar6" android:layout_width="6dp" android:layout_height="30dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar7" android:layout_width="6dp" android:layout_height="25dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar8" android:layout_width="6dp" android:layout_height="35dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>
        <View android:id="@+id/bar9" android:layout_width="6dp" android:layout_height="20dp" android:layout_margin="3dp" android:background="@drawable/sound_bar"/>

    </LinearLayout>

    <!-- Chat Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chatCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnToggle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#15FFFFFF"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#25FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- User -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_person"/>

                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You: ..."
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginStart="14dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30FFFFFF"
                android:layout_marginVertical="16dp"/>

            <!-- AI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bot"/>

                <TextView
                    android:id="@+id/tvAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AI: ..."
                    android:textSize="16sp"
                    android:textColor="#81D4FA"
                    android:layout_marginStart="14dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:src="@drawable/ic_mic_white"
        app:fabSize="normal"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF"
        app:elevation="12dp"
        app:rippleColor="#80FFFFFF"/>

    <!-- Version -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Powered by Groq AI"
        android:textSize="11sp"
        android:textColor="#505060"/>

</RelativeLayout>
