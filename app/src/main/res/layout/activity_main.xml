<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ™ï¸ Voice Agent"
        android:textSize="32sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"/>

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Start to begin"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="32dp"/>

    <!-- Main Circle Container -->
    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center">

        <!-- Pulse Ring (outer) -->
        <View
            android:id="@+id/pulseView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_pulse"
            android:alpha="0"
            android:elevation="8dp"/>

        <!-- Main Circle -->
        <View
            android:id="@+id/circleView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_main"
            android:elevation="12dp"/>

        <!-- Icon -->
        <TextView
            android:id="@+id/tvIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸŽ¤"
            android:textSize="72sp"
            android:elevation="16dp"/>

    </FrameLayout>

    <!-- Conversation Area -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#2A2A3E"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You: ..."
                    android:textSize="15sp"
                    android:textColor="#4CAF50"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404060"
                android:layout_marginVertical="12dp"/>

            <!-- AI Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤–"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AI: ..."
                    android:textSize="15sp"
                    android:textColor="#64B5F6"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Toggle Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToggle"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="â–¶ï¸ START"
        android:textSize="18sp"
        android:textColor="#fff"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="30dp"
        app:elevation="8dp"
        app:rippleColor="#80FFFFFF"/>

    <!-- Version Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0 â€¢ Groq AI Powered"
        android:textSize="12sp"
        android:textColor="#606080"
        android:layout_marginTop="24dp"/>

</LinearLayout>
